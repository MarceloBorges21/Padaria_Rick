@model Padaria_Rick.Models.Entity.Pessoa

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.2.1.js"></script>
<link href="~/Content/Menu.css" rel="stylesheet" />
<br />
<h2><b>Editar</b></h2>
<br />
<div class="col-lg-6">
    <form action="/Pessoa/EditarCliente" method="post" class="form-horizontal" id="form">

        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id" />
 
        <div class="form-group">
            <label for="nome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                <input id="nome" class="form-control" name="pessoa.Nome" onkeyup="valida()" required data-ng-message="nome requirido" value="@Model.Nome" />
            </div>

        </div>

        <div class="form-group">
            <label for="cpf" class="col-sm-2 control-label">CPF</label>
            <div class="col-sm-10">
                <input id="cpf" class="form-control" placeholder="000.000.000-00" required name="pessoa.CPF" value="@Model.CPF" />
            </div>
        </div>

        <div class="form-group">
            <label for="endereco" class="col-sm-2 control-label">Endereço</label>
            <div class="col-sm-10">
                <input id="endereco" class="form-control" name="pessoa.Endereco" required value="@ViewBag.Endereco" />
            </div>
        </div>

        <div class="form-group">
            <label for="login" class="col-sm-2 control-label">Login</label>
            <div class="col-sm-10">
                <input id="login" class="form-control" name="pessoa.Login" required value="@ViewBag.Login" />
            </div>
        </div>

        <div class="form-group">
            <label for="senha" class="col-sm-2 control-label">Senha</label>
            <div class="col-sm-10">
                <input type="password" id="senha" class="form-control" required name="pessoa.Senha" />
            </div>
        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="button" id="Editar" name="Editar" class="btn btn-primary">Editar</button>
        </div>
    </form>
</div>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.mask.js"></script>
<script src="~/Scripts/jquery.maskMoney.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/ScriptsDeTelas/Tela_Pessoa.js"></script>

