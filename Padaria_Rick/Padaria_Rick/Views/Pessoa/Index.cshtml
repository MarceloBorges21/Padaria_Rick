@model IEnumerable<Padaria_Rick.Models.Entity.Pessoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Lista de pessoas</h2>
<br />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Endereco</th>
            <th scope="col">Tipo</th>
            <th scope="col">Login</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in ViewBag.Listapessoa)
        {
            <tr id="pessoa-@pessoa.Id">
                <th scope="row">@pessoa.Id</th>
                <td>@pessoa.Nome</td>
                <td>@pessoa.CPF</td>
                <td>@pessoa.Endereco</td>
                <td>@pessoa.Tipo</td>
                <td>@pessoa.Login</td>
                <td><a href="#" data-toggle="modal" data-target="#modal">Editar</a>/<a href="#" onclick="Excluir(@pessoa.Id);">Deletar</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form action="/Pessoa/EditarCliente" method="post" class="form-horizontal" id="form">

                    <input type="hidden" class="form-control" id="Id" name="Id" value="@ViewBag.Id" />

                    <div class="form-group">
                        <label for="nome" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input id="nome" class="form-control" name="pessoa.Nome" onkeyup="valida()" required data-ng-message="nome requirido" value="@ViewBag.Nome" />
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="cpf" class="col-sm-2 control-label">CPF</label>
                        <div class="col-sm-10">
                            <input id="cpf" class="form-control" placeholder="000.000.000-00" required name="pessoa.CPF" value="@ViewBag.CPF" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="endereco" class="col-sm-2 control-label">Endereço</label>
                        <div class="col-sm-10">
                            <input id="endereco" class="form-control" name="pessoa.Endereco" required value="@ViewBag.Endereco" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="login" class="col-sm-2 control-label">Login</label>
                        <div class="col-sm-10">
                            <input id="login" class="form-control" name="pessoa.Login" required value="@ViewBag.Login" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="senha" class="col-sm-2 control-label">Senha</label>
                        <div class="col-sm-10">
                            <input type="password" id="senha" class="form-control" required name="pessoa.Senha" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/ScriptsDeTelas/Tela_Pessoa.js"></script>
