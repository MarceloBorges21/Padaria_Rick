@model IEnumerable<Padaria_Rick.Models.Entity.Pessoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Lista de pessoas</h2>
<br />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Endereco</th>
            <th scope="col">Tipo</th>
            <th scope="col">Login</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in ViewBag.Listapessoa)
        {
            <tr>
                <th scope="row">@pessoa.Id</th>
                <td>@pessoa.Nome</td>
                <td>@pessoa.CPF</td>
                <td>@pessoa.Endereco</td>
                <td>@pessoa.Tipo</td>
                <td>@pessoa.Login</td>
                <td><a href="~/Pessoa/Cadastro/@pessoa.Id">Editar</a>/<a href="#">Deletar</a></td>
            </tr>
        }
    </tbody>
</table>



