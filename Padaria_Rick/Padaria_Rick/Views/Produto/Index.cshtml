
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Menu.css" rel="stylesheet" />
<h2 class="text-center">Cardapio</h2>
<br />
<label>Filtrar bebida: </label>
<input type="text" name="filtro"  class="filtrar" id="filtrar-bebida" placeholder="Digite a bebida desejada">
<table class="table table-dark">
    <thead>
        <tr>
            <th class="text-center" scope="col">Bebidas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in ViewBag.ListaBebida)
        {
            <tr class="bebidas">
                <td class="nomeBebida">@produto.Nome</td>
            </tr>
        }
    </tbody>
</table>

<label>Filtrar salgado: </label>
<input type="text" name="filtro" class="filtrar" id="filtrar-salgado" placeholder="Digite a bebida desejada">
<table class="table table-dark">
