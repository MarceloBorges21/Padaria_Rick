        <tr>
            <th class="text-center" scope="col">Salgados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in ViewBag.ListaSalgado)
        {
            <tr class="salgados">
                <td class="nomeSalgado">@produto.Nome</td>
            </tr>
        }
    </tbody>
</table>


<label>Filtrar doce: </label>
<input type="text" name="filtro"  class="filtrar" id="filtrar-doce" placeholder="Digite a bebida desejada">
<table class="table table-dark">
    <thead>
        <tr>
            <th class="text-center" scope="col">Doces</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in ViewBag.ListaDoce)
        {
            <tr class="doces">
                <td class="nomeDoce">@produto.Nome</td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Scripts/ScriptsDeTelas/Tela_Produto.js"></script>
