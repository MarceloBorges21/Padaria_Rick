
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function ($) {
        // Configuração padrão.
        $("#Valor").maskMoney({ decimal: ".", thousands: "," });
    });
</script>
<h2><b>Cadastro produtos</b></h2>
<br />

<div class="col-lg-6 border-dark">
    <form action="/Produto/Adicionar" method="post" class="form-horizontal" id="form">

        <div class="form-group">
            <label for="nome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                <input id="nome" class="form-control" name="produto.Nome" value="@ViewBag.Produto.Nome" />
            </div>
        </div>
        <div class="form-group">
            <label for="categoria" class="col-sm-2 control-label">Categoria</label>
            <div class="col-sm-10">
                <select id="categoria" name="produto.CategoriaId" class="form-control">
                    @foreach (var categoria in ViewBag.Categoria)
                    {
                        <option value="@categoria.Id" selected="@categoria.Id.Equals(ViewBag.Produto.CategoriaId)">
                            @categoria.Descricao
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="valor" class="col-sm-2 control-label">Valor</label>
            <div class="col-sm-10">
                <input id="Valor" class="form-control" name="produto.Valor" value="@ViewBag.Produto.Valor" />
            </div>
        </div>
        <div class="form-group col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

